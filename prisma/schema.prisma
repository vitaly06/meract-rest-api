generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserStatus {
  ACTIVE
  WARNED
  BLOCKED
}

enum ActStatus {
  ONLINE
  OFFLINE
}

enum ActType {
  SINGLE
  MULTI
}

enum ActFormat {
  SINGLE
  SEVERAL
}

enum SelectionMethods {
  VOTING
  BIDDING
  MANUAL
}

model User {
  id             Int        @id @default(autoincrement())
  login          String?    @unique
  password       String
  email          String     @unique
  status         UserStatus @default(ACTIVE)
  warningCount   Int        @default(0)
  roleId         Int        @default(1)
  role           Role       @relation(fields: [roleId], references: [id])
  terminateCount Int?

  following User[] @relation("UserFollows")
  followers User[] @relation("UserFollows")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  refreshToken             String?
  intros Intro[]
  outros Outro[]
  musics Music[]
  Act                   Act[]
  sequels Sequel[]
  UserActivity             UserActivity[]
  UserActivityParticipants UserActivityParticipants[]
  ChatMessage              ChatMessage[]
  GuildChatMessage         GuildChatMessage[]
  achievements             UserAchievement[]
  ranks                    UserRank[]
  Guild                    Guild?                     @relation(fields: [guildId], references: [id])
  guildId                  Int?
}

model Role {
  id   Int    @id @default(autoincrement())
  name String @unique
  User User[]
}

model Guild {
  id           Int     @id @default(autoincrement())
  name         String  @unique
  description  String?
  logoFileName String?

  ownerId Int

  members User[]
  messages GuildChatMessage[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Act {
  id              Int            @id @default(autoincrement())
  title            String
  previewFileName String?
  sequelId Int?
  sequel Sequel? @relation(fields: [sequelId], references: [id], onDelete: Cascade)

  type ActType @default(SINGLE)
  format ActFormat @default(SINGLE)
  heroMethods SelectionMethods @default(VOTING)
  navigatorMethods SelectionMethods @default(VOTING)
  biddingTime String

  introId Int
  intro Intro @relation(fields: [introId], references: [id], onDelete: Cascade)

  outroId Int
  outro Outro @relation(fields: [outroId], references: [id], onDelete: Cascade)

  musics ActMusic[]

  status          ActStatus   @default(ONLINE)
  startedAt       DateTime       @default(now())
  endedAt         DateTime?
  
  // Agora Cloud Recording
  recordingResourceId String?
  recordingSid        String?
  recordingUrl        String?
  recordingStatus     String? // recording, processing, completed, failed
  
  // Act Category
  categoryId      Int?
  category        Category?      @relation(fields: [categoryId], references: [id])
  // Act
  userId          Int
  user            User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  UserActivity    UserActivity[]
  ChatMessage     ChatMessage[]
  tasks           ActTask[]
}

// Stream Categories
model Category {
  id     Int      @id @default(autoincrement())
  name   String   @unique
  Act Act[]
}

model Sequel{
  id Int @id @default(autoincrement())
  title String
  episodes Int
  coverFileName String?
  userId Int
  acts Act[]
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Intro {
  id Int @id @default(autoincrement())
  fileName String
  acts Act[]
  userId          Int?
  user            User?          @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Outro {
  id Int @id @default(autoincrement())
  fileName String
  acts Act[]
    userId          Int?
  user           User?           @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Music {
  id Int @id @default(autoincrement())
  fileName String
  length String
  acts ActMusic[]
  userId Int?
  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ActMusic {
  act      Act      @relation(fields: [actId], references: [id], onDelete: Cascade)
  actId    Int
  
  music    Music    @relation(fields: [musicId], references: [id], onDelete: Cascade)
  musicId  Int
  
  order    Int      @default(0) // Порядок воспроизведения музыки
  
  @@id([actId, musicId])
  @@index([actId])
}

model UserActivity {
  id        Int      @id @default(autoincrement())
  action    String
  details   Json?
  createdAt DateTime @default(now())

  // Связь с участниками действия
  participants UserActivityParticipants[]
  User         User?                      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId       Int?
  Act       Act?                    @relation(fields: [streamId], references: [id])
  streamId     Int?
}

model UserActivityParticipants {
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int

  activity   UserActivity @relation(fields: [activityId], references: [id])
  activityId Int

  // example: "initiator", "target"
  role String?

  @@id([userId, activityId])
}

model ChatMessage {
  id        Int      @id @default(autoincrement())
  message   String
  createdAt DateTime @default(now())
  
  // Связь с пользователем
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Связь со стримом
  actId     Int
  act       Act      @relation(fields: [actId], references: [id], onDelete: Cascade)
  
  @@index([actId, createdAt])
}

model Achievement {
  id    Int    @id @default(autoincrement())
  name  String @unique
  
  users UserAchievement[]
  
  createdAt DateTime @default(now())
}

model Rank {
  id    Int    @id @default(autoincrement())
  name  String @unique
  
  users UserRank[]
  
  createdAt DateTime @default(now())
}

model UserAchievement {
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int

  achievement   Achievement @relation(fields: [achievementId], references: [id], onDelete: Cascade)
  achievementId Int
  
  awardedAt DateTime @default(now())

  @@id([userId, achievementId])
  @@index([userId])
}


model UserRank {
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int

  rank   Rank @relation(fields: [rankId], references: [id], onDelete: Cascade)
  rankId Int
  

  @@id([userId, rankId])
  @@index([userId])
}

model GuildChatMessage {
  id        Int      @id @default(autoincrement())
  message   String
  createdAt DateTime @default(now())
  
  // Связь с пользователем
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Связь с гильдией
  guildId   Int
  guild     Guild    @relation(fields: [guildId], references: [id], onDelete: Cascade)
  
  @@index([guildId, createdAt])
}

model ActTask {
  id          Int      @id @default(autoincrement())
  title       String
  isCompleted Boolean  @default(false)
  createdAt   DateTime @default(now())
  completedAt DateTime?
  
  // Связь с актом
  actId       Int
  act         Act      @relation(fields: [actId], references: [id], onDelete: Cascade)
  
  @@index([actId])
}
